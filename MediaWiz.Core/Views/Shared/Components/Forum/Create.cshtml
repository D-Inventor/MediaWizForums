@model MediaWiz.Forums.Models.ForumsForumModel
@using MediaWiz.Forums.Controllers
@using MediaWiz.Forums.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Umbraco.Cms.Core.Services
@using Umbraco.Extensions
@inject ILocalizationService LocalizationService
<div class="modal fade" id="forumModal" tabindex="-1" aria-labelledby="forumModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="forumModalLabel">@LocalizationService.GetOrCreateDictionaryValue("Forums.Forum.Create","Create Forum")</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginUmbracoForm<ForumsSurfaceController>("CreateForum", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="@Model.Title" class="form-label"></label>
                        <input asp-for="@Model.Title" class="form-control" />
                        <span asp-validation-for="@Model.Title" class="form-text text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Introduction" class="form-label"></label>
                        <textarea asp-for="@Model.Introduction" class="form-control" ></textarea>
                        <div id="introHelp" class="form-text">Enter a brief description for the forum.</div>
                        <span asp-validation-for="@Model.Introduction" class="form-text text-danger"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="@Model.AllowPosts" class="form-check-input" type="checkbox" />
                        <label asp-for="@Model.AllowPosts" class="form-check-label"></label>
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="@Model.AllowImages" class="form-check-input" type="checkbox" />
                        <label asp-for="@Model.AllowImages" class="form-check-label"></label>
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="@Model.RequireApproval" class="form-check-input" type="checkbox" />
                        <label asp-for="@Model.RequireApproval" class="form-check-label"></label>
                    </div>
                    <input asp-for="@Model.ParentId" type="hidden" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@LocalizationService.GetOrCreateDictionaryValue("Forums.Cancel","Cancel")</button>
                    <button type="submit" class="btn btn-dark">@LocalizationService.GetOrCreateDictionaryValue("Forums.Save","Save")</button>
                </div>
            }

        </div>
    </div>
</div>
